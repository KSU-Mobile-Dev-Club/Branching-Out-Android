<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

	<ImageView
		android:id="@+id/info_image"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:scaleType="fitXY"
		android:src="@drawable/gardens"
		/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight=".8">

		<TextView
			android:id="@+id/intro_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
			android:layout_centerVertical="true"
			android:layout_centerHorizontal="true"
			android:layout_marginLeft="32dp"
			android:layout_marginRight="32dp"
			android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. In nec sem nec urna congue venenatis id a ipsum. Nunc interdum nulla vel metus maximus tempor. Quisque cursus elementum arcu, sed ultrices elit. Nulla elementum arcu eget dignissim egestas. Nulla at tincidunt mi, quis ornare nibh. Nulla vitae sodales eros, eget venenatis ex. Donec sit amet nibh nec est accumsan ullamcorper. Etiam dui ipsum, tristique non mauris nec, sodales viverra sem."
			/>

		<TextView
			android:id="@+id/intro_header"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
			android:layout_centerVertical="true"
			android:text="Welcome to Branching Out!"
			android:textStyle="bold"
			android:textSize="20dp"
			android:paddingBottom="5dp"
			android:layout_centerHorizontal="true"
			android:layout_above="@id/intro_text"
			/>
	</RelativeLayout>
</LinearLayout>